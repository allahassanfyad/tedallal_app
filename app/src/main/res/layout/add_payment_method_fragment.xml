<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <com.application.tedallal_app.Utils.TextViewWithFontbold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_bold"
                        android:text="إضافة طريقة دفع"
                        android:textColor="@color/colorGray6"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="144dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="55dp"
                        android:layout_marginBottom="54dp"
                        android:background="@color/colorw"
                        android:innerRadius="0dp"
                        android:shape="oval"
                        android:thicknessRatio="2"
                        app:cardBackgroundColor="@color/colorw"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="7dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="12dp"
                            android:layoutDirection="rtl"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/visa" />


                            <com.application.tedallal_app.Utils.TextViewWithFontbold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="35dp"
                                android:layout_marginEnd="3dp"
                                android:fontFamily="@font/tajawal_bold"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="1234 0000 1235 042"
                                android:textColor="@color/colorRed"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="3dp"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal"
                                android:weightSum="1">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".35"
                                    android:gravity="end"
                                    android:orientation="vertical">

                                    <com.application.tedallal_app.Utils.TextViewWithFont
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:fontFamily="@font/tajawal_regular"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="12/22"
                                        android:textColor="@color/colorb"
                                        android:textSize="15sp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".65"
                                    android:gravity="end"
                                    android:orientation="vertical">

                                    <com.application.tedallal_app.Utils.TextViewWithFont
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:fontFamily="@font/tajawal_regular"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="Alla hassan"
                                        android:textColor="@color/colorb"
                                        android:textSize="15sp" />
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">


                    <com.application.tedallal_app.Utils.TextViewWithFontMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tajawal_medium"
                        android:text="إسم حامل البطاقة "
                        android:textColor="@color/colorHintBorder"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/strok4"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="start|center_vertical"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorb"
                        android:textSize="16sp" />


                    <com.application.tedallal_app.Utils.TextViewWithFontMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/tajawal_medium"
                        android:text="رقم البطاقة"
                        android:textColor="@color/colorHintBorder"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/strok4"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorb"
                            android:textSize="16sp" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/strok4"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorb"
                            android:textSize="16sp" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/strok4"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorb"
                            android:textSize="16sp" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_weight="1"
                            android:background="@drawable/strok4"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLines="1"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorb"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <com.application.tedallal_app.Utils.TextViewWithFontMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/tajawal_medium"
                        android:text="إسم حامل البطاقة "
                        android:textColor="@color/colorHintBorder"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_weight=".35"
                            android:background="@drawable/strok4"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="start|center_vertical"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorb"
                            android:textSize="16sp" />


                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="43dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight=".45"
                            android:background="@drawable/strok4"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="start|center_vertical"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorb"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <com.application.tedallal_app.Utils.TextViewWithFontMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/tajawal_medium"
                        android:text="CVV/CVC"
                        android:textColor="@color/colorHintBorder"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="84dp"
                        android:layout_height="43dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/strok4"
                        android:fontFamily="@font/tajawal_regular"
                        android:gravity="start|center_vertical"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorb"
                        android:textSize="16sp" />

                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="34dp"
                    android:background="@drawable/strok"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="إستمرار"
                    android:textColor="@color/colorw"
                    android:textSize="19sp" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


</LinearLayout>