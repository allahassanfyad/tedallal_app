<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_marginBottom="13dp"
    android:background="@color/colorw"
    android:orientation="horizontal"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".43"
        android:layout_marginStart="12.5dp"
        android:layout_marginBottom="12.5dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorw"
            android:innerRadius="0dp"
            android:shape="oval"
            android:thicknessRatio="2"
            app:cardBackgroundColor="@color/colorw"
            app:cardCornerRadius="0dp">


            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_tedallal" />


        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".57"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="15sp"
        android:layout_marginBottom="12.5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_x_delete_svg"
                android:layout_gravity="end"
                android:layout_marginEnd="3dp"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical">


            <com.application.tedallal_app.Utils.TextViewWithFontMedium
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" علاء الدين حسن عبدالخالق جاد فياضطقم صالونة تطريز ناعم اسود M26500"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/colorDarkGray"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="15sp" />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.application.tedallal_app.Utils.TextViewWithFontbold
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="650"
                android:textColor="@color/colorb"
                android:textSize="18sp" />

            <com.application.tedallal_app.Utils.TextViewWithFontbold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/tajawal_bold"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/ryal"
                android:textColor="@color/colorb"
                android:textSize="18sp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.application.tedallal_app.Utils.TextViewWithFontMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size_"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/colorDarkGray"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="14sp" />


            <com.application.tedallal_app.Utils.TextViewWithFontMedium
                android:id="@+id/txtSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/colorDarkGray"
                android:layout_marginStart="34dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="14sp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.application.tedallal_app.Utils.TextViewWithFontMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quntity"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/colorDarkGray"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="17dp"
                android:background="@drawable/strok3">



                <com.application.tedallal_app.Utils.TextViewWithFontMedium
                    android:id="@+id/txtIncrease"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="@color/colorb"
                    android:maxLines="3"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:layout_marginTop="-2dp"/>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="2.5dp"
                    android:background="@color/colorEditBorder" />


                <EditText

                    android:id="@+id/txtQuntity"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorw"
                    android:fontFamily="@font/tajawal_regular"
                    android:gravity="center"
                    android:text="6"
                    android:maxLength="2"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:maxLines="1"
                    android:textColor="@color/colorb"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="2.5dp"
                    android:background="@color/colorEditBorder" />

                <com.application.tedallal_app.Utils.TextViewWithFontMedium
                    android:id="@+id/txtDecrease"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:fontFamily="@font/tajawal_medium"
                    android:textColor="@color/colorb"
                    android:maxLines="3"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textSize="20sp"
                    android:layout_marginTop="-2dp"/>



            </LinearLayout>




        </LinearLayout>




    </LinearLayout>


</LinearLayout>