<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tajawal_bold"
                    android:includeFontPadding="false"
                    android:text="@string/change_language"
                    android:textColor="@color/colorb"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/txtDismiss"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/tajawal_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:text="x"
                    android:textColor="@color/colorGrayBorder"
                    android:textSize="@dimen/_20sdp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/checkPersonalArabic"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:button="@drawable/custom_checkbox"
                            android:checked="false"
                            android:drawablePadding="@dimen/_12sdp"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:text="اللغة العربية"
                            android:textColor="@color/colorb"
                            android:textSize="@dimen/_15sdp" />

                        <CheckBox
                            android:id="@+id/checkPersonalEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:button="@drawable/custom_checkbox"
                            android:checked="false"
                            android:drawablePadding="@dimen/_12sdp"
                            android:fontFamily="@font/tajawal_regular"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:text="English"
                            android:textColor="@color/colorb"
                            android:textSize="@dimen/_15sdp" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorGrayBorder" />

            </RelativeLayout>


            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/tajawal_medium"
                android:includeFontPadding="false"
                android:text="@string/confirm"
                android:gravity="center"
                android:textColor="@color/colorw"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparentLoading"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorPrimary" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>

