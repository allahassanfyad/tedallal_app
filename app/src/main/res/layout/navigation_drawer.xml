        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">


                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="0dp"
                            android:text="@string/main_page"
                            android:fontFamily="@font/tajawal_medium"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="0dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:text="@string/order_history"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearFavourite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:fontFamily="@font/tajawal_medium"
                            android:paddingEnd="0dp"
                            android:text="@string/favourit"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:fontFamily="@font/tajawal_medium"
                            android:paddingEnd="0dp"
                            android:text="@string/create_new_account_"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:fontFamily="@font/tajawal_medium"
                            android:paddingEnd="0dp"
                            android:text="@string/about_us_"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearTermsAndConditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:fontFamily="@font/tajawal_medium"
                            android:paddingEnd="0dp"
                            android:text="@string/notifications"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearChangeLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="0dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:text="@string/change_language_"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.application.tedallal_app.Utils.TextViewWithFontMedium
                            android:id="@+id/txtLogout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="0dp"
                            android:fontFamily="@font/tajawal_medium"
                            android:text="تسجيل الدخول"
                            android:textColor="@color/colorw"
                            android:textSize="@dimen/_16sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/colorGrayBorder" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
