<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/colorw"
    android:orientation="horizontal"
    android:paddingTop="@dimen/_5sdp"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".15">


        <LinearLayout
            android:id="@+id/linearMenuImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleX=".5"
                android:scaleY=".6"
                android:src="@drawable/menu"
                android:tint="@color/colorGrayBorder" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo_toolbar" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".15">


        <RelativeLayout
            android:id="@+id/linearCartImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtCartCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="1"
                android:textColor="@color/colorGrayBorder"
                android:textSize="14sp"
                android:textStyle="bold"

                />


            <ImageView
                android:id="@+id/imgCartIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleX=".5"
                android:scaleY=".5"
                android:src="@drawable/cart_toolbar_svg"
                android:tint="@color/colorGrayBorder" />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>